/**app.wxss**/
page{
  background: #efefef;
  font-size: 14px;
}

.clearfix:before, .clearfix:after {
  content: " ";
  display: table; 
}
.clearfix:after {
  clear: both; 
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.hover{
  text-decoration: underline;
}
.hide{
  display: none;
}
.price{
  color: #FF8800;
  font-weight: 700;
}
.disabled{
  color: #999 !important;
  background-color: transparent !important;
}
.emphasize{
  font-weight: 700;
}
.block-item{
  border-bottom: 1px solid #EFEFEF !important;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.tip-container,.modal-container{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.tip-container{
  text-align: center;
  padding-top: 45%;
}
.tip-container>.content{
  background-color:rgba(0,0,0,0.18);
  border-radius:2px;
  padding:0 10px;
  color:#333;
}
.modal-container>.layer-content{
  margin-left:10%;
  top: 30%;
  display:block;
  width:80%;
  text-align:center;
  background:#FFF;
  position:absolute;
  border-radius: 4px;
  z-index:2;
  padding:10px;
}
.modal-container>.layer-content>.title,.modal-container>.layer-content>.content{
  min-height:24px;
  border-bottom:1px solid #e4e4e4;
}
.modal-container>.layer-content>.opt{
  margin-top:10px;
}
.modal-container>.layer-content>.opt>button{
  margin: 0 10px;
}
.modal-container>.layer-content>.opt>button.ok{
  background: #528B8B;
  color: #FFF;
}
.modal-container>.layer-box-shadow{
  position:absolute;
  width:100%;
  height:100%;
  opacity:.2;
  background:#000;
}
.trigger{
  border: 4px solid transparent;
  margin-left: 6px;
  position: relative;
}
.trigger.desc,.trigger-down{
  border-top-color: #666;
}
.trigger.asc,.trigger-up{
  border-bottom-color: #666;
  top: -4px;
}



.footer{
  overflow: hidden;
  width: 100%;
  height: 46px;
  line-height: 46px;
  position: fixed;
  bottom: 0;
  background-color:rgba(255,255,255,.58);
}

.footer>.button{
  width: 30%;
  height: 100%;
  color: #FFF;
  font-weight: 700;
  text-align: center;
  background-color: red;
  position:absolute;
  right: 0;
  top: 0;
}