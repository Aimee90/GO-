/**app.wxss**/
page{
  background: #efefef;
  font-size: 14px;
}
.hide{
  display: none;
}
.price{
  color: #FF8800;
  font-weight: 700;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.tip-container,.modal-container{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.tip-container{
  text-align: center;
  padding-top: 45%;
}
.tip-container>.content{
  background-color:rgba(0,0,0,0.18);
  border-radius:2px;
  padding:0 10px;
  color:#333;
}
.modal-container>.layer-content{
  margin-left:10%;
  top: 30%;
  display:block;
  width:80%;
  text-align:center;
  background:#FFF;
  position:absolute;
  border-radius: 4px;
  z-index:2;
  padding:10px;
}
.modal-container>.layer-content>.title,.modal-container>.layer-content>.content{
  min-height:24px;
  border-bottom:1px solid #e4e4e4;
}
.modal-container>.layer-content>.opt{
  margin-top:10px;
}
.modal-container>.layer-content>.opt>button{
  margin: 0 10px;
}
.modal-container>.layer-content>.opt>button.ok{
  background: #528B8B;
  color: #FFF;
}
.modal-container>.layer-box-shadow{
  position:absolute;
  width:100%;
  height:100%;
  opacity:.2;
  background:#000;
}
