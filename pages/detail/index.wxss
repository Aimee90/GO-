/* pages/detail/index.wxss */
image{
  width: 100%;
  height: 100%;
}
.container{
  padding: 0;
}
.container>.banner{
  width: 100%;
  height: 150px;
}
.container>.product{
  width: 100%;
  background-color:#FFF;
  padding-top: 10px;
}
.container .block-item{
  border-bottom: 1px solid #EFEFEF;
}
.container>.product>.price-info{
  position: relative;
  padding-bottom: 6px;
}
.container>.product>.price-info>.price{
  padding-left: 10px;
}
.container>.product>.price-info>.cart{
  width:28px;
  height:20px;
  position:absolute;
  right:10px;
  top:0px;
}
.container>.product>.price-info label{
  font-size: 16px;
}
.container>.product>.price-info text{
  font-size:12px;
  color:#999;
  margin-left:8px;
  text-decoration:underline;
  font-weight:100;
}
.container>.product>.labels-info>view{
  padding: 0 5px;
  font-size:12px;
  margin-top: 5px;
  margin-left:5px;
  display: inline-block;
  border-width: 1px;
  border-style: solid;
  border-radius: 2px;
}
.container>.product>.labels-info>view.hot{
  border-color: #FF8800;
  color: #FF8800;
}
.container>.product>.labels-info>view.rec{
  border-color: #009ACD;
  color: #009ACD;
}
.container>.product>.product-info{
  padding: 10px;
}
.container>.product>.spec-info{
  padding: 10px;
}
.container>.product .spec-item>view{
  display: inline-block;
}
.container>.product>.spec-info .selected{
  width: 98%;
}
.container>.product>.spec-info .selected>text{
  margin-left:10px;
  color:#999;
  font-size:12px;
}
.container>.product>.spec-info .arrow{
  color: #999;
  width: 2%;
}
.container>.product>.spec-info>.spec-list>view{
  padding:8px 0;
  color: #999;
  font-size: 12px;
}

.container>.product-details{
  width: 100%;
  margin-top: 4px;
  background-color: #FFF;
}
.container>.product-details>.title{
  text-align: center;
  padding: 8px;
}
.container>.product-details>.item{
  flex-direction: column;
}



