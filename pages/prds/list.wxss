.main-container{
  background: #efefef
}
.clearfix{
  clear: both;
}
.price{
  color: #FF8800;
}
.main-container .item{
  height: 98px;
  width: 48%;
  float: left;
  background: #FFF;
  margin-top: 8px;
  padding: 1%;
  overflow: hidden;
}
.main-container .item>.content,.main-container .item>.prodImg{
  height: 100%;
  float: left;
  display: block;
}
.main-container .item>.content{
  width: 58%;
  font-size: 14px;
}
.main-container .item>.content>.desc{
  color: #666;
}
.main-container .item>.prodImg{
  width: 40%;
}

image{
  width: 100%;
  height: 100%;
}