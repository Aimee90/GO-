.clearfix{
  clear: both;
}
image{
  width: 100%;
  height: 100%;
}
.main-container .item{
  height: 98px;
  width: 98%;
  float: left;
  background: #FFF;
  margin-top: 8px;
  margin: 1%;
  overflow: hidden;
  position: relative;
}
.main-container .item>view{
  float: left;
}
.main-container .item>.content{
  height: 100%;
  width: 40%;
  z-index: 1;
}
.main-container .item>.buy-item{
  bottom:0;
  height:100%;
  width: 58%;
  padding-left:4px;
  background-color:rgba(255,255,255,0.5);
  z-index:2;
  text-align: left;
  color:#333;
}
.main-container .item>.buy-item>.prd-name{
  width:100%;
  height:32px;
  font-weight:700;
  line-height:32px;
}
.main-container .item>.buy-item>.prd-desc{
  font-size: 12px;
  color:#666;
  height:34PX;
  overflow: hidden;
  text-overflow:ellipsis;
}
.main-container .item>.buy-item>.prd-info{
  height: 30px;
}
.main-container .item>.buy-item>.prd-info>.price{
  font-size: 16px;
  float: left;
}
.main-container .item>.buy-item>.prd-info>text{
  font-size: 12px;
  float: right;
}
.main-container .item>.buy-item>.prd-info>.price,.main-container .item>.buy-item>.prd-info>text{
  margin-top: 4px;
}