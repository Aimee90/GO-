.main-container{
  background: #efefef
}
.clearfix{
  clear: both;
}
.price{
  color: #FF8800;
  font-weight: 700;
}
image{
  width: 100%;
  height: 100%;
}
.main-container .item{
  height: 132px;
  width: 48%;
  float: left;
  background: #FFF;
  margin-top: 8px;
  margin: 1%;
  overflow: hidden;
}
.main-container .item>.content{
  position: relative;
  height: 80%;
  width: 100%;
  font-size: 14px;
  z-index: 1;
}
.main-container .item>.content>.con-item{
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  padding: 0 10px;
}
.main-container .item>.content .desc{
  color: #666;
}
.main-container .item>.content .price{
  position: absolute;
  bottom: 0;
  right: 32px;
}
.main-container .item>.buy-item{
  height: 20%;
  text-align: center;
}
.main-container .item>.buy-item>view{
  width: 50%;
  height: 100%;
  font-size: 16px;
  text-align: center;
  color: #09BB07;
  display: inline-block;
  font-weight: 700;
}
.main-container .item>.buy-item>view.minus{
  display: none;
}

.main-container .item.cart{
  /* border: 1px solid #09BB07; */
}

.main-container .item.cart>.buy-item>view.minus{
  display: inline-block;
}