.clearfix{
  clear: both;
}
image{
  width: 100%;
  height: 100%;
}
.main-container .item{
  height: 132px;
  width: 48%;
  float: left;
  background: #FFF;
  margin-top: 8px;
  margin: 1%;
  overflow: hidden;
  position: relative;
}
.main-container .item>.content{
  position: relative;
  height: 100%;
  width: 100%;
  z-index: 1;
}
.main-container .item>.buy-item{
  position:absolute;
  bottom:0;
  height:40%;
  width:100%;
  background-color:rgba(255,255,255,0.5);
  z-index:2;
  text-align: left;
  color:#333;
}
.main-container .item>.buy-item>.prd-name{
  height:20px;
  font-weight:700;
}
.main-container .item>.buy-item .price{
  float: right;
}
.main-container .item>.buy-item>.prd-desc{
  font-size: 12px;
  color:#666;
}