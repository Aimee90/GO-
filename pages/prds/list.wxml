<view class='main-container'>
  <view class='banner'>
    <swiper indicator-dots='true' autoplay='true'>
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src='{{item}}' class='slide-img' width='400' height='150'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <scroll-view>
    <block wx:for="{{products}}" wx:for-item="item">
      <view class='item cart' data-prid='{{item.id}}' bindtap='go2Detail'>
        <view class='content'>
          <image src='{{item.imgUrl}}'></image>
        </view>
        <view class='buy-item'>
          <view class='prd-name'>{{item.name}}<view class='price'>ï¿¥{{item.price}}</view></view>
          <view class='prd-desc'>{{item.description}}</view>
        </view>
      </view>
    </block>
  </scroll-view>
</view>