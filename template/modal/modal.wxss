/* template/modal/modal.wxss */

textarea{
  width: 90%;
  height: 78px;
  display: block;
  text-align: left;
  padding: 5%;
}
.tip-container,.modal-container{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.tip-container{
  text-align: center;
  padding-top: 45%;
}
.tip-container>.content{
  background-color:rgba(0,0,0,0.18);
  border-radius:2px;
  padding:0 10px;
  color:#333;
}
.modal-container>.layer-content{
  margin-left:8%;
  top: 30%;
  display:block;
  width:80%;
  text-align:center;
  background:#FFF;
  position:absolute;
  border-radius: 4px;
  z-index:2;
  padding:10px;
}
.modal-container>.layer-content>.title{
  min-height:24px;  
}
.modal-container>.layer-content>.content{
  min-height:78px;  
}
.modal-container>.layer-content>.opt{
  margin-top:10px;
}
.modal-container>.layer-content>.opt>button{
  margin: 0 10px;
}
.modal-container>.layer-content>.opt>button.ok{
  background: #528B8B;
  color: #FFF;
}
.modal-container>.layer-box-shadow{
  position:absolute;
  width:100%;
  height:100%;
  opacity:.2;
  background:#000;
}

.buttom-slide>.layer-content{
  bottom: 0;
  top: auto;
  width: 100%;
  margin: 0;
  border-radius: 0;
  padding-bottom: 20px;
  padding-top: 0;
}

.buttom-slide>.layer-content>.btn-group{
  position: relative;
  height: 34px;
}
.buttom-slide>.layer-content .btn{
  position: absolute;
  height: 20px;
  width: 45px;
  top: 7px;
}
.buttom-slide>.layer-content .ok{
  right:35px;
}
.buttom-slide>.layer-content .cancel{
  left:15px;
}
.buttom-slide>.layer-content>.content{
  min-height: 34px;
}
.buttom-slide>.layer-content>.content>view{
  padding:12px 0;
  border-top: 1px solid #EFEFEF !important;
}
.buttom-slide>.layer-content>.content>view.selected{
  color: #00c37d;
}